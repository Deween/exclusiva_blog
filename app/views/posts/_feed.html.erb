<%# Below view is for the posts placed in a box, the ability to put a new post is also embedded here %>
<%# <div class="column">
    <div class="columns is-centered"> %>
        <div class="column is-half">  
            <div class= "box">
                <%= render 'form'%>
            </div>  
            <% @posts.each do |post| %>
            <div class="box">   
                <article class="media"> 
                    <div class="media-content"> 
                        <div class="content"> 
                            <strong> Username </strong>
                            <small> @Handle </small>  
                            <h4> <%= post.title %> </h4>
                            <p> <%= post.post %> </p>
                        </div>   
                    </div> 
                    <nav class="level">  
                        <div class = "level-left is-mobile">
                            <%= link_to edit_post_path(post), class: "level-item" do %>
                                <span class= "icon">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </span>
                            <% end %>
                            <%= link_to post,method: :delete, data: {confirm: "Are you sure you want to delete this? "} do %>
                                <span class="icon">
                                    <i class="fa fa-trash-o"></i>
                                </span>
                            <% end %>
                        </div>
                    </nav>
                </article>
            </div>
            <% end %>
        </div>
    <%# </div>
</div> %>