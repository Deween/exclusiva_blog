<%# Below view is for the posts placed in a box, the ability to put a new post is also embedded here %>
<%# <div class="column">
    <div class="columns is-centered"> %>
        <div class="column is-half">  
            <%= render "flash" %>
            <%if user_signed_in?%>
                <div class= "box">
                    <%= render 'form'%>
                </div> 
            <% else %> 
                <div class= "box level-item has-centered-text">
                    <h1 class="title">Sign Up or Log In to Make a Post</h1>
                </div> 
            <% end %>           
            <% @posts.each do |post| %>
            <div class="box">   
                <article class="media"> 
                    <div class="media-content"> 
                        <div class="content"> 
                        <% if user_signed_in? %>
                            <strong> <%= post.user.name %> </strong>
                            <small> <%= post.user.username %></small>
                        <% else %>
                            <strong>Sign up or Log In to see author</strong>
                        <% end %>  
                            <h4> <%= post.title %> </h4>
                            <p> <%= post.post %> </p>
                        </div>
                    </div> 
                    <nav class="level">  
                        <div class = "level-left is-mobile">
                        <% if user_signed_in? && current_user.id == post.user_id %>
                            <%= link_to edit_post_path(post), class: "level-item" do %>
                                <span class= "icon">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </span>
                            <% end %>
                            <%= link_to post,method: :delete, data: {confirm: "Are you sure you want to delete this? "} do %>
                                <span class="icon">
                                    <i class="fa fa-trash-o"></i>
                                </span>
                            <% end %>
                        <% end %>
                        </div>
                    </nav>
                </article>
            </div>
            <% end %>
        </div>
    <%# </div>
</div> %>